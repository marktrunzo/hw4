<h1>Sign Up</h1>

<%= form_with model: @user, url: users_path, class: 'form-signup' do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit 'Sign up', class: 'btn btn-lg btn-primary btn-block' %>
<% end %>
